<%= render "layouts/errors", :object => @exercise %>

<%= simple_form_for [@workout, @exercise] do |f| %>
    <%= f.input :name, label: 'Name of exercise' %>
    <%= f.input :sets, label: 'Number of sets' %>
    <%= f.input :reps, label: 'Number of reps per set' %>
    <%= f.input :lbs, label: 'Weight in lbs' %>
    <%= f.hidden_field(:user_id, :value => current_user.id) %>
    <%= f.hidden_field(:workout_id, :value => @workout.id) %>

    <br>
  <%= f.button :submit %>

  <% end %>
