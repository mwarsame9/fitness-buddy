<%= render "layouts/errors", :object => @workout %>



<%= simple_form_for @workout do |f| %>
    <%= f.input :date, label: 'Date of the workout' %>
    <%= f.input :workout, label: 'Type of workout' %>
    <%= f.input :length, label: 'Length of workout' %>
    <%= f.input :notes, label: 'Any notes' %>
    <%= f.hidden_field(:user_id, :value => current_user.id) %>

    <br>
  <%= f.button :submit %>

  <% end %>
