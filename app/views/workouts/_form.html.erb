<%= render "layouts/errors", :object => @workout %>



<%= simple_form_for @workout do |f| %>
    <%= f.input :date, wrapper_html: { class: 'm6 s12' } %>
    <%= f.input :workout, wrapper_html: { class: 'm6 s12' } %>
    <%= f.input :length, wrapper_html: { class: 'm6 s12' } %>
    <%= f.hidden_field(:user_id, :value => current_user.id) %>

    <br>
  <%= f.button :submit %>

  <% end %>
